/* pages/canvas/canvas.wxss */
@import "../keyboard/basekey.wxss";
@import "../keyboard/function.wxss";
@import "../keyboard/keyboard.wxss";
.screen {
  height: 100%;
  width: 100%;
  background: #fc9;
  align-items: center;
  position: fixed;
  _position: absolute;
  top: 0;
  left: 0;
}

/* canvas text */

.canvas-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #000;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

/* stage contrl */

.stage {
  width: 100%;
  height: 50%;
}

.input {
  width: 100%;
  border: 1px solid #000;
  align-items: center;
  background: white;
  padding: 8rpx;
}

.resultCtrl {
  flex-direction: row;
  border: 1px solid #000;
  padding: 10rpx;
}

.result {
  width: 100%;
  padding: 10rpx;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}

.keyboard {
  width: 100%;
  height: 50%;
  border: solid 1px black;
}
