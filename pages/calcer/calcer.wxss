/* pages/canvas/canvas.wxss */
@import "../../components/template/keyboard/keyboard.wxss";

.screen {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  position: absolute;
  align-items: center;
}

.container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.keyboard-container {
  width: 100%;
  position: fixed;
  bottom: 0;
}

/* stage contrl */
.stage {
  width: 100%;
}

.text_con {
  padding: 8rpx;
  display: flex;
  background: white;
  flex-direction: row;
  align-items: center;
  display: -webkit-flex;
  border: 1rpx solid black;
}

.resultCtrl {
  flex-direction: row;
  border: 1px solid #000;
  padding: 10rpx;
}

.result {
  width: 100%;
  padding: 10rpx;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}