/* pages/canvas/canvas.wxss */
@import "../keyboard/keys.wxss";

.screen {
  height: 100%;
  width: 100%;
  background: #fc9;
  align-items: center;
  position: fixed;
  _position: absolute;
  top: 0;
  left: 0;
}

/* canvas text */

.canvas-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  border: 1px solid #000;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

/* stage contrl */

.stage {
  width: 100%;
  height: 50%;
}

.input {
  width: 100%;
  border: 1px solid #000;
  align-items: center;
  background: white;
  padding: 8rpx;
}

.text_con {
  width: 99.5%;
  padding: 8rpx;
  display: flex;
  background: white;
  flex-direction: row;
  align-items: center;
  display: -webkit-flex;
  border: 1rpx solid black;
}

.resultCtrl {
  flex-direction: row;
  border: 1px solid #000;
  padding: 10rpx;
}

.result {
  width: 100%;
  padding: 10rpx;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}

.keyboard {
  width: 100%;
  height: 50%;
  border: solid 1px black;
  white-space: nowrap;
  display: flex;
  _position: absolute;
  position: fixed;
  bottom: 0;
  left: 0;
}

.keyboard-item {
  width: 100%;
  height: 100%;
  display: inline-block;
}
