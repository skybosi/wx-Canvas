/* pages/canvas/canvas.wxss */
@import "../../components/template/keyboard/keyboard.wxss";

.screen {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  margin-top: 5rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.input {
  width: 100%;
  border: 1px solid #000;
  align-items: center;
  background: white;
  padding: 8rpx;
}

.keyboard-container {
  left: 0;
  bottom: 0;
  width: 100%;
  display: flex;
  position: fixed;
  position: absolute;
  white-space: nowrap;
  border: solid 1px black;
}

.keyboard-item {
  width: 100%;
  bottom: 0;
  display: inline-block;
}

/* stage contrl */
.stage {
  width: 100%;
}

.input {
  padding: 8rpx;
  padding-left: 10rpx;
  display: flex;
  height: 2rem;
  background: white;
  flex-direction: row;
  align-items: center;
  display: -webkit-flex;
  border: 1rpx solid black;
}

.resultCtrl {
  flex-direction: row;
  border: 1px solid #000;
  padding: 10rpx;
}

.result {
  width: 100%;
  padding: 10rpx;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}

.cursor-blink {
  width: 2rpx;
  height: 50rpx;
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  background: #0c0;
  border-radius: 2rpx;
  animation: blink 1s infinite steps(1, start);
}

/*这里设置动画blink*/
@keyframes blink {

  0%,
  100% {
    background-color: #fff;
    color: #0c0;
  }

  50% {
    background-color: #0c0;
    /* not #aaa because it's seem there is Google Chrome bug */
    color: #fff;
  }
}

.extend {
  height: 20px;
  width: 100%;
  color: #fff;
  padding: 5px;
  line-height: 10px;
  font-weight: bolder;
  text-align: center;
  background-color: #000;
  letter-spacing: 30px;
}