<import src="../../components/template/keyboard/keyboard.wxml" />
<view class='screen'>
  <view class="stage">
    <view class="text_con" catchtap="bindTap" bindlongtap="longTap" bindtouchstart="touchStart"
      bindtouchmove="touchMove" bindtouchend="touchEnd">
      <view style="font-size:20px">{{inputString}}</view>
    </view>
    <view class="resultCtrl" style="display:{{resultStatus}}">
      <view class="result"> <label>{{SolveResult}}</label> </view>
    </view>
  </view>
  <view class='keyboard-container'>
    <swiper current="1" duration="100" style="height:{{keyboardHeight}}px">
      <block wx:for="{{keyboards}}" wx:key="index" id="{{it}}">
        <swiper-item>
          <template is="keyboard-head" data="{{keyboard: item.head}}" />
          <template is="keyboard-body" data="{{keyboard: item.body}}" />
        </swiper-item>
      </block>    
    </swiper>
  </view>
</view>