/* pages/drawer/drawer.wxss */

.screen {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: fixed;
  background: #fc9;
}

/* canvas text */

.canvas-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #000;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

/* stage contrl */

.plot {
  border-left: 1px solid #000;
  padding: 10rpx;
  float: right;
}

.resultCtrl {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #000;
  border-left: 1px solid #000;
  border-right: 1px solid #000;
  padding: 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.result {
  width: 100%;
  padding: 10rpx;
}

.gridoff {
  display: flex;
  flex-direction: row;
  float: right;
}

.scrollview {
  width: 60%;
  height: 60%;
  position: absolute;
  float: left;
  padding: 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.itemview {
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bolder;
  font-size: smaller;
  white-space: nowrap;
  padding: 20rpx 20rpx 20rpx 20rpx;
  border-bottom: 1px solid #b1b1b1;
}

/*show contrl*/

.showCtrl {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10rpx;
}

.plotCtrl {
  display: none;
  border: 1px solid #000;
  background: -webkit-text-stroke;
  margin: 5rpx;
  padding: 5rpx;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}

/*canvas style*/

.canvas {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border: 1px solid #000;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.tips {
  border: 1px solid #000;
  background: #c60;
  padding: 4rpx;
}

.wxcanvas {
  border-left: 1px dashed #f00;
  border-right: 1px dashed #f00;
}