.itm ctrl {
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 100%;
  height: 10px;
  width: 10px;
  margin-top: -90px;
  position: absolute;
  -webkit-transform: scale(0);
}

@-webkit-keyframes itm ctrl {
  100% {
    -webkit-transform: scale(12);
    transform: scale(12);
    background-color: transparent;
  }
}
