/* pages/canvas/canvas.wxss */

.screen {
  height: 100%;
  width: 100%;
  background: #FFCC99;
  position: fixed;
  top: 0;
  left: 0;
}

/* canvas text */

.canvas-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  border-bottom: 1px solid #000;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

/* stage contrl */

/*input contrl*/

.inPutCtrl {
  display: flex;
  flex-direction: row;
  align-items: center;
  border: 1px solid #000;
  margin-top: 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.input {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  background: white;
  padding: 10rpx;
}

.solve {
  border-left: 1px solid #000;
  padding: 10rpx;
  float: right;
}

.plot {
  border-left: 1px solid #000;
  padding: 10rpx;
  float: right;
}

.resultCtrl {
  display: flex;
  flex-direction: row;
  border-bottom: 1px solid #000;
  border-left: 1px solid #000;
  border-right: 1px solid #000;
  padding: 10rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.result{
  width: 100%;
  padding: 10rpx;
}
.gridoff{
  float: right
}

/*show contrl*/

.showCtrl {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 10rpx;
}

.plotCtrl {
  display: none;
  border: 1px solid #000;
  background: -webkit-text-stroke;
  margin: 5rpx;
  padding: 5rpx;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}

/*canvas style*/

.canvas {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: white;
  border: 1px solid #000;
  margin-left: 15rpx;
  margin-right: 15rpx;
}
.tips{
  border: 1px solid #000;
  background: #cc6600;
  padding: 4rpx;
}
.wxcanvas {
  border-left: 1px dashed #ff0000;
  border-right: 1px dashed #ff0000;
}
