/* pages/canvas/canvas.wxss */

.canvas-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.canvas-show {
  background: #FFFFCC;
  opacity: 0.8;  
  border: 1px solid #000;
  margin-top: 20rpx;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.In-section {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}

.section {
  background: gray;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 4rpx;
  margin-right: 4rpx;
}

.timer-ctrl {
  display: flex;
  margin-top: 10rpx;
  flex-direction: row;
  align-items: center;
}
