/* pages/canvas/canvas.wxss */

.stage {
  height: 100%;
  width: 100%;
  background: #666666;
  position: fixed;
  top: 0;
  left: 0;
}

.canvas-text {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.canvas-show {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #ffc;
  border: 1px solid #000;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.In-section {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
}

.label {
  word-break: break-all;
  margin-left: 4px;
  margin-right: 4px;
}

.section {
  background: gray;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 4rpx;
  margin-right: 4rpx;
}

.timer-ctrl {
  display: flex;
  margin-top: 10rpx;
  flex-direction: row;
  align-items: center;
}
